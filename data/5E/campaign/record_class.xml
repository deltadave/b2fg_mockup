			</classprof_link>
			<label_column name="multiproftools_label">
				<static textres="classprof_label_tools" />
			</label_column>
			<hs name="multiproftools_name" source="multiclassproficiencies.tools.name">
				<default textres="classprof_value_tools" />
			</hs>
