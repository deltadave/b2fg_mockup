			</link_listitem_column>
			<button_listitem_column_delete name="idelete" />

			<string_listitem_column_name name="name">
				<empty textres="library_recordtype_empty_classspecialization" />
			</string_listitem_column_name>
		</sheetdata>
	</windowclass>

