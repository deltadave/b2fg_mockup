	<windowclass name="ref_class_feature">
		<margins control="0,0,0,2" />
		<script>
			function update(bReadOnly)
				level.setReadOnly(bReadOnly);
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_listitem_column_right name="rightanchor" />
