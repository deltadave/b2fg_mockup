<root>
	<windowclass name="charsheet_charwizard_racealt">
		<sheetdata>
			<subwindow name="contents">
				<anchored>
					<top offset="0" />
					<bottom offset="0" />
					<left offset="0" />
					<right offset="-535" />
				</anchored>
